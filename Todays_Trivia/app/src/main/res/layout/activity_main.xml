<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin" android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/background2"
    android:textAlignment="center"
    android:weightSum="1">

    <TextView android:text="@string/app_name" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="true"
        android:background="#005bffaf"
        android:elegantTextHeight="false"
        android:gravity="top"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="45dp"
        android:id="@+id/textView2"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:text="TRIVIA"
        android:id="@+id/buttonTrivia"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/button"
        android:textColor="#a7ffffff"
        android:layout_weight="0.19"
        android:layout_marginTop="50dp"
        android:textStyle="bold|italic"
        android:textSize="50dp"
        android:layout_marginBottom="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="94dp"
        android:text="About"
        android:id="@+id/buttonAbout"
        android:layout_gravity="center_horizontal"
        android:background="@mipmap/button"
        android:textColor="#a8ffffff"
        android:textSize="50dp"
        android:textStyle="bold|italic" />


</LinearLayout>
