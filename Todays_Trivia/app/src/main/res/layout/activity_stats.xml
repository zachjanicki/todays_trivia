<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.janicki.zach.todays_trivia.StatsActivity"
    android:background="@drawable/background2">

    <TextView android:text="Statistics" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:id="@+id/textView13"
        android:typeface="normal"
        android:textColor="#a9ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="History Percentage Correct:"
        android:id="@+id/textView4"
        android:textSize="17dp"
        android:lines="2"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp"
        android:typeface="normal"
        android:textColor="#a9ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Entertainment Percentage Correct:"
        android:id="@+id/textView5"
        android:textSize="17dp"
        android:lines="2"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:typeface="normal"
        android:textColor="#a9ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView3"
        android:text="Sports Percentage Correct:"
        android:textSize="17dp"
        android:lines="2"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:typeface="normal"
        android:textColor="#a9ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Most Days Played In a Row:"
        android:id="@+id/textView9"
        android:textSize="17dp"
        android:lines="2"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:typeface="normal"
        android:textColor="#a9ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current Day Streak:"
        android:id="@+id/textView10"
        android:textSize="17dp"
        android:lines="2"
        android:layout_below="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:typeface="normal"
        android:textColor="#a9ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Favorite Category:"
        android:id="@+id/textView11"
        android:textSize="17dp"
        android:lines="2"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:typeface="normal"
        android:textColor="#a9ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Best Category"
        android:id="@+id/textView12"
        android:textSize="17dp"
        android:lines="2"
        android:layout_below="@+id/textView11"
        android:layout_alignParentLeft="true"
        android:typeface="normal"
        android:textColor="#a9ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Menu"
        android:id="@+id/buttonMenu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/button"
        android:textColor="#a5ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textViewHistory"
        android:layout_above="@+id/textView5"
        android:layout_toEndOf="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignEnd="@id/textView13"
        android:layout_toRightOf="@+id/textView13"
        android:textSize="17dp"
        android:textColor="#a8ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textViewEntertainmnet"
        android:textSize="17dp"
        android:layout_below="@+id/textViewHistory"
        android:layout_alignLeft="@+id/textViewHistory"
        android:layout_alignStart="@+id/textViewHistory"
        android:textColor="#a8ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textViewSports"
        android:textSize="17dp"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textViewEntertainmnet"
        android:layout_alignStart="@+id/textViewEntertainmnet"
        android:textColor="#a8ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textViewMostDays"
        android:textSize="17dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:textColor="#a8ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textViewCurrentDayStreak"
        android:textSize="17dp"
        android:layout_below="@+id/textView9"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:textColor="#a8ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textViewFavorite"
        android:textSize="17dp"
        android:layout_below="@+id/textView10"
        android:layout_toRightOf="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:textColor="#a8ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textViewBest"
        android:textSize="17dp"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/textViewFavorite"
        android:layout_alignStart="@+id/textViewFavorite"
        android:textColor="#a8ffffff" />

</RelativeLayout>
